    console.log(` ${country} population is above average `);
}
else {
    console.log(` ${country} population is below average `);
}

myCountryPopulation = 13;
if (myCountryPopulation > avgPopulation) {
    console.log(` ${country} population is above average `);
}
else {
    console.log(` ${country} population is below average `);
}
myCountryPopulation = 130;
if (myCountryPopulation > avgPopulation) {
    console.log(` ${country} population is above average `);
}
else {
    console.log(` ${country} population is below average `);
}


